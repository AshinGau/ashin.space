include ../assets/mixins/ashin-mixins

doctype
html(xmlns="http://www.w3.org/1999/xhtml")
	head
		include ../assets/include/ashin-link
		include ../assets/include/ie_patch
		script(type="text/javascript",src="/script/plugins/jquery.uploadPreview.js")
		style(type='text/css').
			.input-label{
				display: block;
				width: 100%;
				height: 100%;
				cursor: pointer;
				color: #00d6b7;
				text-align: center;
			}
			.input-label:hover{
				color: #008a76;
				text-decoration: underline;
			}
			#previewImages img{
				max-width: 300px;
				max-height: 300px;
				margin: 10px;
			}
		script(type="text/javascript").
			$(function(){
				var $images = $('#previewImages');
				$('#uploadPreview').uploadPreview({
					trigger: 'change',
					onComplete: function(imgs) {
						$images.append(imgs);
					}
				})
			});
	body
		.jumbotron
			.container
				h1 jquery.uploadPreview.js
				p Preview images before uploading
		.container: .row: .col-sm-14
			.panel.panel-default.panel-stress.interval
				.panel-heading 
					input.hide.form-control(type='file',name='uploadPreview',id='uploadPreview',multiple='multiple')
					label.input-label(for='uploadPreview') >> PREVIEW IMAGES <<
				.panel-body
					ul.list-group.list-group-condense
						li.list-group-item
							.row(style='font-size:16px;line-height:1.6em;') Preview images before uploading. Compatible with IE6 and independent on THML/CSS, so you can control and amend every image before uploading via the image document element returned.
						li.list-group-item
							.row#previewImages
		+ashin_footer
		a(href='https://github.com/AshinGau/pithyUpload')
			img(src='/img/ashin/bg/forkme.png',style='position: absolute; top: 0; right: 0; border: 0;',alt='form me on github')
		include ../assets/include/alert.jade